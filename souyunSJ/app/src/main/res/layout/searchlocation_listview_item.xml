<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/default_dp8"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/slItemTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/default_font18"/>

        <TextView
            android:id="@+id/slItemSubTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#aaaaaa"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/default_font14"/>
    </LinearLayout>

    <Button
        android:id="@+id/slItemSelectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:paddingStart="@dimen/default_dp10"
        android:paddingEnd="@dimen/default_dp10"
        android:paddingTop="@dimen/default_dp6"
        android:paddingBottom="@dimen/default_dp6"
        android:textSize="@dimen/default_font14"
        android:background="@drawable/blue_btn_selector"
        android:text="选取位置"/>

</LinearLayout>