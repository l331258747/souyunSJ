<?xml version="1.0" encoding="utf-8"?>
<com.xrwl.driver.module.publish.view.PublishProductLongView
    android:id="@+id/publishProductLongTotalLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        style="@style/PublishLayoutStyle">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/publish_ic_hw"/>

        <EditText
            android:id="@+id/ppLongNumEt"
            android:textSize="@dimen/default_font12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_dp6"
            android:background="@null"
            android:inputType="numberDecimal"
            android:lines="1"
            android:hint="请输入"
            android:textCursorDrawable="@drawable/color_cursor"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_dp15"
            android:text="件"
            android:visibility="gone"
            />

    </LinearLayout>

    <include layout="@layout/base_lineview_include"/>

    <LinearLayout
        style="@style/PublishLayoutStyle">

        <TextView
            style="@style/PublishIconStyle"
            android:drawableStart="@drawable/publish_ic_hw"
            android:text="货物重量"/>

        <EditText
            android:id="@+id/ppLongWeightEt"
            style="@style/PublishEditStyle"
            android:layout_marginStart="@dimen/default_dp6"
            android:background="@null"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:hint="请输入"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_dp4"
            android:text="吨*"/>

        <EditText
            android:id="@+id/ppLongSinglePriceEt"
            style="@style/PublishEditStyle"
            android:layout_marginStart="@dimen/default_dp6"
            android:background="@null"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:hint="请输入"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_dp4"
            android:text="单价="/>

        <EditText
            android:id="@+id/ppLongTotalPriceEt"
            style="@style/PublishEditStyle"
            android:layout_marginStart="@dimen/default_dp6"
            android:background="@null"
            android:inputType="text"
            android:lines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_dp4"
            android:text="金额"/>
    </LinearLayout>

    <include layout="@layout/base_lineview_include"/>

    <LinearLayout
        style="@style/PublishLayoutStyle">

        <TextView
            style="@style/PublishIconStyle"
            android:drawableStart="@drawable/publish_ic_hw"
            android:text="货物体积"/>

        <EditText
            android:id="@+id/ppLongAreaEt"
            style="@style/PublishEditStyle"
            android:layout_marginStart="@dimen/default_dp6"
            android:background="@null"
            android:inputType="numberDecimal"
            android:lines="1"
            android:hint="请输入"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_dp4"
            android:text="方*"/>

        <EditText
            android:id="@+id/ppLongSinglePrice2Et"
            style="@style/PublishEditStyle"
            android:layout_marginStart="@dimen/default_dp6"
            android:background="@null"
            android:inputType="numberDecimal"
            android:lines="1"
            android:hint="请输入"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_dp4"
            android:text="单价="/>

        <EditText
            android:id="@+id/ppLongTotalPrice2Et"
            style="@style/PublishEditStyle"
            android:layout_marginStart="@dimen/default_dp6"
            android:background="@null"
            android:inputType="text"
            android:lines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_dp4"
            android:text="金额"/>
    </LinearLayout>
</com.xrwl.driver.module.publish.view.PublishProductLongView>

<!--长途整车 货物 输入-->