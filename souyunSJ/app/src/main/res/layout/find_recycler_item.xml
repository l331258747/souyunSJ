<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/base_list_selector"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_dp30"
            android:background="@color/color_3C92E7"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/myOrderItemTruckTv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_dp30"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:text="车型：金杯"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/myOrderItemProductNameTv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_dp30"
                android:layout_weight="1"
                android:gravity="center"
                android:text="货名：货物"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/myOrderItemDateTv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_dp30"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2019-09-03"
                android:textColor="@color/white" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_f5f5f5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.04"
                        android:gravity="center"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:layout_width="15px"
                            android:layout_height="15px"
                            android:layout_marginTop="9dp"
                            android:src="@drawable/list_lvdian" />

                        <ImageView
                            android:layout_width="10px"
                            android:layout_height="10px"
                            android:layout_marginTop="9dp"
                            android:src="@drawable/list_huidian" />

                        <ImageView
                            android:layout_width="10px"
                            android:layout_height="10px"
                            android:layout_marginTop="9dp"
                            android:src="@drawable/list_huidian" />

                        <ImageView
                            android:layout_width="10px"
                            android:layout_height="10px"
                            android:layout_marginTop="9dp"
                            android:src="@drawable/list_huidian" />

                        <ImageView
                            android:layout_width="10px"
                            android:layout_height="10px"
                            android:layout_marginTop="9dp"
                            android:src="@drawable/list_huidian" />

                        <ImageView
                            android:layout_width="15px"
                            android:layout_height="15px"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/list_hongdian" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/myOrderItemStartTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/default_font14"
                                tools:text="山西省临汾市尧都区山西省临汾市尧都区山西省临汾市尧都区山西省临汾市尧都区" />

                            <TextView
                                android:id="@+id/start_descss"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/default_font14"
                                tools:text="今井村" />

                            <TextView
                                android:id="@+id/myOrderItemEndTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/default_font14"
                                tools:text="山西省临汾市尧都区" />

                            <TextView
                                android:id="@+id/end_descss"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/default_font14"
                                tools:text="尧庙村" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/gggggggaaaaagg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/kilo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="距离：10公里"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/default_font12" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_dp50">
                    <TextView
                        android:id="@+id/freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="价格：100元"
                        android:layout_marginStart="@dimen/default_dp20"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font12"/>

                    <TextView
                        android:id="@+id/myOrderItemPropertyTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="重量：1吨/1方/1件"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/btn_red_r40"
                        android:text="点击查看"
                        android:paddingStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/default_dp20"
                        android:paddingEnd="@dimen/dp_15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_font12" />

                    <TextView
                        android:id="@+id/isjiedanTv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/default_dp50"
                        android:layout_weight="1"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:visibility="gone"
                        android:text="未接单"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font12" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/default_dp50"
                android:layout_height="125dp"
                android:gravity="center"
                android:background="@color/colorAccent"
                android:visibility="gone"
                android:layout_marginTop="@dimen/default_dp1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aaa"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_dp30"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="1"
                    android:text="点击查看"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_font16" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="-35dp"
                    android:src="@drawable/list_jiantou" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/myOrderItemDriverTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="司机：张三"
        android:textColor="@color/default_cell_info_color"
        android:textSize="@dimen/default_cell_info_font"
        android:visibility="gone" />
</LinearLayout>