<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_dp15"
    android:gravity="center_vertical"
    android:background="@drawable/base_list_selector"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/contactHeaderItemCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:button="@drawable/friend_checkbox_selector"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/default_font16"
        android:layout_marginStart="@dimen/default_dp15"
        android:text="@string/friendadd_header_select_all"/>

</LinearLayout>