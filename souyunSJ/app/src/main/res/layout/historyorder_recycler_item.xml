<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_list_selector"
    android:orientation="vertical"
    android:padding="@dimen/default_dp10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/historyOrderItemStartTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="霍州市"
                    android:textColor="@color/default_cell_title_color"
                    android:textSize="@dimen/default_cell_title_font"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_dp10"
                    android:layout_marginStart="@dimen/default_dp10"
                    android:src="@drawable/publish_ic_arrow"/>

                <TextView
                    android:id="@+id/historyOrderItemEndTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="岳阳站"
                    android:textColor="@color/default_cell_title_color"
                    android:textSize="@dimen/default_cell_title_font"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_dp4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/historyOrderItemProductNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货名：化工"
                    android:textColor="@color/default_cell_info_color"
                    android:textSize="@dimen/default_cell_info_font"/>

                <TextView
                    android:id="@+id/historyOrderItemTruckTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_dp15"
                    android:text="车型：小型面包"
                    android:textColor="@color/default_cell_info_color"
                    android:textSize="@dimen/default_cell_info_font"/>

            </LinearLayout>

            <TextView
                android:id="@+id/historyOrderItemPropertyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_dp4"
                android:text="5吨/10件/15方"
                android:textColor="@color/default_cell_info_color"
                android:textSize="@dimen/default_cell_info_font"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_order_finished"/>

    </LinearLayout>

</LinearLayout>