<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/default_dp15"
    android:paddingEnd="@dimen/default_dp15"
    android:paddingTop="@dimen/default_dp10"
    android:paddingBottom="@dimen/default_dp10"
    android:background="@drawable/base_list_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idItemTitleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="运输货物损坏险"
            android:textColor="@color/black"
            android:textSize="@dimen/default_font16"/>

        <TextView
            android:id="@+id/idItemPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50元"
            android:textColor="@color/black"
            android:textSize="@dimen/default_font16"/>

    </LinearLayout>

    <TextView
        android:id="@+id/idItemDesTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/default_font14"
        android:layout_marginTop="@dimen/default_dp10"
        android:text="保险货物在运输途中的损坏与丢失保额在1万以下"/>

</LinearLayout>