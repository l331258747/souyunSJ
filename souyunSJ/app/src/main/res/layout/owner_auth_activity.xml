<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



    <com.ldw.library.view.TitleView
        android:id="@+id/baseTitleView"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:backImage="@drawable/ic_back"
        app:titleText="@string/title_auth"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

              <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/default_dp15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_dp50"
                        android:text="姓     名"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font20"/>
                    <EditText
                        android:id="@+id/authNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp20"
                        android:background="@null"
                        android:hint="请输入真实姓名"
                        android:lines="1"
                        android:inputType="text"
                        android:textSize="@dimen/default_font20"/>
                </LinearLayout>
                <include layout="@layout/base_lineview_include"/>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/default_dp15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_dp50"
                        android:text="身份证"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font20"/>
                    <EditText
                        android:id="@+id/authidentifiedEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp20"
                        android:background="@null"
                        android:hint="请输入身份证"
                        android:lines="1"
                        android:inputType="text"
                        android:textSize="@dimen/default_font20"/>
                </LinearLayout>
                <include layout="@layout/base_lineview_include"/>






                <LinearLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/default_dp50"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="@dimen/default_dp20"
                            android:scaleType="centerCrop"
                            android:src="@drawable/zhengmianshili"/>
                        <ImageView
                            android:id="@+id/authIdIv"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="@dimen/default_dp20"
                            android:scaleType="centerCrop"
                            android:src="@drawable/zhengmian"/>


                    </LinearLayout>

                    <include layout="@layout/base_lineview_include"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/default_dp15">
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="@dimen/default_dp20"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fanmianshili" />
                        <ImageView
                            android:id="@+id/authAvatarIv"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="@dimen/default_dp20"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fanmian" />




                    </LinearLayout>







                    <LinearLayout
                        android:id="@+id/authCheckBoxLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_dp10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/authCb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="申请成为"

                            android:textSize="@dimen/default_font12"
                            android:textColor="@color/light_gray"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="整车发货"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/default_font12"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单位"

                            android:textSize="@dimen/default_font12"
                            android:textColor="@color/light_gray"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/authTotalLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/default_dp40"
                        android:paddingTop="@dimen/default_dp15"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="单位名称"
                                android:textColor="@color/black"
                                android:textSize="@dimen/default_font20"
                                android:layout_marginTop="@dimen/default_dp10"
                                />

                            <EditText
                                android:id="@+id/authUnitNameEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_dp20"
                                android:background="@null"
                                android:hint="请输入单位名称"
                                android:lines="1"
                                android:inputType="text"
                                android:textSize="@dimen/default_font20"
                                android:layout_marginTop="@dimen/default_dp10"
                                />

                        </LinearLayout>
                        <include layout="@layout/base_lineview_include"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/default_dp30">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="128dp"
                                android:layout_marginStart="@dimen/default_dp20"
                                android:scaleType="centerCrop"
                                android:src="@drawable/zhizhao"/>
                            <ImageView
                                android:id="@+id/authLicenseIv"
                                android:layout_width="90dp"
                                android:layout_height="128dp"
                                android:layout_marginStart="@dimen/default_dp20"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_add"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/authSuccessLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_dp20"
                        android:src="@drawable/ic_publish_success"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="恭喜您！上传成功"
                        android:layout_marginTop="@dimen/default_dp40"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_font26"/>

                </LinearLayout>


            <TextView
                android:id="@+id/authDesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_dp10"
                android:gravity="center"
                android:text="上传成功后，工作人员会在1-2个工作日内审核认证。"
                android:textColor="@color/light_gray"/>
            <Button
                android:id="@+id/authConfirmBtn"
                style="@style/BaseBtnTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_dp20"
                android:layout_marginEnd="@dimen/default_dp25"
                android:layout_marginStart="@dimen/default_dp25"
                android:layout_marginTop="@dimen/default_dp20"
                android:text="确认"
                android:textColor="@color/white"/>

        </LinearLayout>

</ScrollView>

</LinearLayout>