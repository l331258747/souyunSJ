<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:gravity="center"
        android:textSize="@dimen/default_font20"
        android:padding="@dimen/default_dp20"
        android:text="很抱歉，您还不是认证货主"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_auth_bg"
        android:layout_marginTop="@dimen/default_dp10"
        android:layout_marginBottom="@dimen/default_dp10"/>

    <include layout="@layout/base_lineview_include"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/authDialogCancelTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/base_bg_selector"
            android:text="取    消"
            android:gravity="center"
            android:textSize="@dimen/default_font16"
            android:textColor="@color/dark_gray"
            android:padding="@dimen/default_dp10"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/def_height"
            android:background="@color/divider_color"/>

        <TextView
            android:id="@+id/authDialogAuthTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/base_bg_selector"
            android:textSize="@dimen/default_font16"
            android:textColor="@color/colorPrimary"
            android:text="马上认证"
            android:padding="@dimen/default_dp10"/>

    </LinearLayout>

</LinearLayout>