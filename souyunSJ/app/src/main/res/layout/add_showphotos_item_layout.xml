<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/add_showphotos_item_iv"
        android:layout_width="@dimen/add_showphotos_photo_item_size"
        android:layout_height="@dimen/add_showphotos_photo_item_size"
        android:scaleType="centerCrop"
        android:layout_gravity="left|bottom" />

    <ImageView
        android:id="@+id/add_showphotos_delete_iv"
        android:layout_width="@dimen/add_showphotos_photo_delete_size"
        android:layout_height="@dimen/add_showphotos_photo_delete_size"
        android:src="@drawable/ic_delete_photo"
        android:layout_gravity="right" />

</FrameLayout>