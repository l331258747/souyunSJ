<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/global_bg_color"

    >

    <com.ldw.library.view.TitleView
        android:id="@+id/baseTitleView"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:titleText="详情"
        android:background="@color/colorPrimary"
        app:backImage="@drawable/ic_back"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/BaseBtnThemebackground"
        android:layout_marginStart="@dimen/default_dp10"
        android:layout_marginEnd="@dimen/default_dp10"
        android:layout_marginTop="@dimen/default_dp10"
        android:layout_marginBottom="@dimen/default_dp10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ddsrc"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mstitle"
                android:text="订单信息"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/default_cell_title_color"
                android:layout_marginTop="@dimen/default_dp20"
                android:textSize="@dimen/default_font20"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_dp20"
            >
            <FrameLayout
                android:id="@+id/businessItemLayout"
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="80dp">



                <View
                    android:id="@+id/businessItemDotView"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/red_dot_layout"
                    android:layout_gravity="top|end"
                    android:visibility="gone"
                    />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/disi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/default_dp8"

                >


                <ImageView
                    android:id="@+id/xianshipictrue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/detailTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/default_cell_detail_color"
                    android:textSize="@dimen/default_cell_detail_font"
                    android:layout_marginEnd="@dimen/default_dp20"
                    android:layout_marginStart="@dimen/default_dp10"
                    android:layout_marginTop="@dimen/default_dp10"
                    android:text="23123"
                    />

                <TextView
                    android:id="@+id/businessItemTimejiageTv"
                    android:layout_marginStart="@dimen/default_dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_cell_detail_color"
                    android:textSize="@dimen/default_cell_detail_font"
                    android:text="111"
                    android:layout_marginEnd="@dimen/default_dp20"
                    />
                <TextView
                    android:id="@+id/businessItemTimeshijianTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/default_cell_detail_color"
                    android:textSize="@dimen/default_cell_detail_font"
                    android:layout_marginTop="@dimen/default_dp2"/>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/dier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >


        </LinearLayout>



    </LinearLayout>





    <include layout="@layout/base_lineview_include" />




    <LinearLayout
        android:id="@+id/diyi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/BaseBtnThemebackground"
        android:layout_marginStart="@dimen/default_dp10"
        android:layout_marginEnd="@dimen/default_dp10"
        android:layout_marginBottom="@dimen/default_dp10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/shouhuoren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="@dimen/default_dp10"
                android:layout_marginStart="@dimen/default_dp20"
                android:text="收货人：秦延伟              86-18803578808"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="@dimen/default_dp10"
                android:layout_marginStart="@dimen/default_dp20"
                android:text="收货地址：山西省 临汾市 尧都区 兴荣物流"
                android:layout_marginBottom="@dimen/default_dp20"
                />
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/base_lineview_include" />




    .

    <LinearLayout
        android:id="@+id/diwu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/BaseBtnThemebackground"
        android:layout_marginStart="@dimen/default_dp10"
        android:layout_marginEnd="@dimen/default_dp10"
        android:layout_marginBottom="@dimen/default_dp10"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/fahuoren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="@dimen/default_dp10"
                android:layout_marginStart="@dimen/default_dp20"
                android:text="发货人：秦延伟              86-18803578808"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/fahuoaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="@dimen/default_dp10"
                android:layout_marginStart="@dimen/default_dp20"
                android:text="发货地址：山西省 临汾市 尧都区 兴荣物流"
                android:layout_marginBottom="@dimen/default_dp20"
                />
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/base_lineview_include" />






    <LinearLayout
        android:id="@+id/disan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BaseBtnThemebackground"
        android:layout_marginStart="@dimen/default_dp10"
        android:layout_marginEnd="@dimen/default_dp10"
        android:layout_marginBottom="@dimen/default_dp10"
        android:orientation="vertical"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_dp10"
            android:layout_marginStart="@dimen/default_dp20"
            android:text="交易快照： 发生交易争议时，可作为判断依据"
            />
        <TextView
            android:id="@+id/ddbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_dp10"
            android:layout_marginStart="@dimen/default_dp20"
            android:text="订单编号： 201905263"
            />
        <TextView
            android:id="@+id/dianhua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_dp10"
            android:layout_marginStart="@dimen/default_dp20"
            android:text="拨打电话： 0357-2591666"
            />
    </LinearLayout>
</LinearLayout>