<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/default_dp15"
    android:paddingEnd="@dimen/default_dp15"
    android:paddingTop="@dimen/default_dp10"
    android:paddingBottom="@dimen/default_dp10"
    android:background="@drawable/base_list_selector"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/meItemAvatarIv"
            android:layout_width="@dimen/default_dp50"
            android:layout_height="@dimen/default_dp50"
            android:src="@drawable/ic_default_avatar"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/meItemNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_dp8"
            android:layout_toEndOf="@id/meItemAvatarIv"
            android:textSize="@dimen/default_font16"
           />

        <TextView
            android:id="@+id/meItemPhoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/meItemAvatarIv"
            android:layout_alignStart="@id/meItemNameTv"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/default_font16"
            android:text="13429388607"/>

        <ImageView
            android:layout_width="@dimen/default_dp40"
            android:layout_height="@dimen/default_dp40"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/me_ic_qrcode"/>
    </LinearLayout>
    <include layout="@layout/base_lineview_include"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/yhjpic"
        android:layout_width="110dp"
        android:layout_height="@dimen/default_dp40"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/newyouhuijuan"/>

    <ImageView
        android:id="@+id/yhkpic"
        android:layout_width="110dp"
        android:layout_height="@dimen/default_dp40"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/newbank"/>
    <ImageView
        android:id="@+id/yepic"
        android:layout_width="110dp"
        android:layout_height="@dimen/default_dp40"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/newyue"/>
</LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/yhj"
            android:layout_width="110dp"
            android:layout_height="@dimen/default_dp40"
            android:gravity="center"
            android:text="优惠卷"/>

        <TextView
            android:id="@+id/yhk"
            android:layout_width="110dp"
            android:layout_height="@dimen/default_dp40"
            android:gravity="center"
            android:text="银行卡"/>
        <TextView
            android:id="@+id/ye"
            android:layout_width="110dp"
            android:layout_height="@dimen/default_dp40"
            android:gravity="center"
            android:text="余额"/>
    </LinearLayout>
</LinearLayout>
