<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <com.ldw.library.view.TitleView
        android:id="@+id/baseTitleView"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:titleText="单号查询"
        app:backImage="@drawable/ic_back"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/home_danhao"
        />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_dp10"
        android:layout_marginEnd="@dimen/default_dp15"
        android:layout_marginStart="@dimen/default_dp15"
        android:layout_marginTop="@dimen/default_dp15"
        android:drawablePadding="@dimen/default_dp10"
        android:orientation="horizontal"
        android:background="@drawable/editsharps"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/login_ic_edit"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_font18"
            android:textColor="@color/black"
            android:background="@null"
            android:text=""/>
        <EditText
            android:id="@+id/gongsibianhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_dp15"
            android:layout_marginStart="@dimen/default_dp15"

            android:background="@null"
            android:drawablePadding="@dimen/default_dp10"

            android:hint="需要查询的快递公司编号"
            />


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/editsharps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_dp10"
        android:layout_marginEnd="@dimen/default_dp15"
        android:layout_marginStart="@dimen/default_dp15"
        android:layout_marginTop="@dimen/default_dp15"
        android:drawablePadding="@dimen/default_dp10"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/login_ic_edit"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_font18"
            android:textColor="@color/black"
            android:background="@null"
            android:text=""/>
        <EditText
            android:id="@+id/kuaididanhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_dp15"
            android:layout_marginStart="@dimen/default_dp15"

            android:background="@null"
            android:drawablePadding="@dimen/default_dp10"

            android:hint="需要查询的快递单号"
            />


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/editsharps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_dp10"
        android:layout_marginEnd="@dimen/default_dp15"
        android:layout_marginStart="@dimen/default_dp15"
        android:layout_marginTop="@dimen/default_dp15"
        android:drawablePadding="@dimen/default_dp10"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/login_ic_edit"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_font18"
            android:textColor="@color/black"
            android:background="@null"
            android:text=""/>
        <EditText
            android:id="@+id/jitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_dp15"
            android:layout_marginStart="@dimen/default_dp15"

            android:background="@null"
            android:drawablePadding="@dimen/default_dp10"

            android:hint="寄件人手机号后四位"
            />


    </LinearLayout>



    <LinearLayout
        android:background="@drawable/editsharps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_dp10"
        android:layout_marginEnd="@dimen/default_dp15"
        android:layout_marginStart="@dimen/default_dp15"
        android:layout_marginTop="@dimen/default_dp15"
        android:drawablePadding="@dimen/default_dp10"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/login_ic_edit"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_font18"
            android:textColor="@color/black"
            android:background="@null"
            android:text=""/>
        <EditText
            android:id="@+id/fatel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_dp15"
            android:layout_marginStart="@dimen/default_dp15"

            android:background="@null"
            android:drawablePadding="@dimen/default_dp10"

            android:hint="收件人手机号后四位"
            />


    </LinearLayout>


    <Button

        android:id="@+id/authConfirmBtn"
        style="@style/BaseBtnTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_dp20"
        android:layout_marginEnd="@dimen/default_dp25"
        android:layout_marginStart="@dimen/default_dp25"
        android:layout_marginTop="@dimen/default_dp40"
        android:text="确认"
        android:textColor="@color/white"/>


</LinearLayout>