<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fanhuijian"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/default_dp10"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/default_dp10"
            android:text="实名认证"
            android:textColor="@color/white"
            android:textSize="@dimen/default_font14" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <!--            个人信息-->

            <LinearLayout
                android:id="@+id/diyiLY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_dp10"
                android:layout_marginBottom="@dimen/default_dp10"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="个人信息"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="完善身份信息，体验更多服务" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/diyiweiwanshanbt"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="未完善" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/aliyun"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/gray"
                android:gravity="center"
                android:text="实名认证服务由阿里云计算有限公司提供"
                android:textColor="@color/white"
                android:textSize="@dimen/default_font14" />

            <!--            是否实名 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/gray_33"
                android:padding="@dimen/default_dp10"
                android:layout_height="180dp">

                <RelativeLayout
                    android:id="@+id/toprzLY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_blue_r5"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/default_dp80"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:src="@drawable/ic_auth_yes"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/topLY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_blue_r5"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/default_dp80"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:src="@drawable/ic_auth_no"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_dp30"
                        android:layout_marginLeft="@dimen/default_dp10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="姓名\u3000\u3000\u3000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_font14" />

                        <TextView
                            android:id="@+id/authNameEt"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/default_dp20"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:inputType="text"
                            android:lines="1"
                            android:textSize="@dimen/default_font14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_dp30"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:text="身份证\u3000\u3000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_font14" />

                        <TextView
                            android:id="@+id/shenfenzhengEt"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/default_dp20"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:inputType="text"
                            android:lines="1"
                            android:textSize="@dimen/default_font14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_dp30"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:text="配送类型\u3000"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <Spinner
                            android:id="@+id/authSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_dp10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_dp30"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:text="驾驶证号码"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_font14" />

                        <TextView
                            android:id="@+id/jiashizhenghaomaEt"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/default_dp20"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:inputType="text"
                            android:lines="1"
                            android:textSize="@dimen/default_font14" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


            <!--            证件照片-->

            <LinearLayout
                android:id="@+id/dierLY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_dp10"
                android:layout_marginBottom="@dimen/default_dp10"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="个人证件照片"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="上传证件照片，提升服务体验" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/dierweiwanshanbt"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="未完善" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/authDesTv"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/gray"
                android:gravity="center"
                android:text="上传成功后，工作人员会在1-2个工作日内审核认证。"
                android:textColor="@color/white"
                android:textSize="@dimen/default_font14" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_33"
                android:gravity="center_horizontal"
                android:orientation="vertical"

                android:padding="@dimen/default_dp10">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/authIdIvUn"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/btn_blue_r5">

                        <ImageView
                            android:id="@+id/iv_1"
                            android:layout_width="@dimen/default_dp100"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp15"
                            android:src="@drawable/zhengmian1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp10"
                            android:layout_toRightOf="@+id/iv_1"
                            android:text="上传身份证-带人像一面"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="@dimen/default_dp30"
                            android:layout_height="@dimen/default_dp30"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/default_dp15"
                            android:background="@drawable/add" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/authIdIv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/zhengmian"
                        android:visibility="gone" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_dp10"
                    android:minHeight="120dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/authAvatarIvUn"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/btn_blue_r5">

                        <ImageView
                            android:id="@+id/iv_2"
                            android:layout_width="@dimen/default_dp100"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp15"
                            android:src="@drawable/fanmian1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp10"
                            android:layout_toRightOf="@+id/iv_2"
                            android:text="上传身份证-带国徽一面"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="@dimen/default_dp30"
                            android:layout_height="@dimen/default_dp30"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/default_dp15"
                            android:background="@drawable/add" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/authAvatarIv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fanmian"
                        android:visibility="gone" />

                </FrameLayout>

            </LinearLayout>

            <!--驾驶证-->
            <LinearLayout
                android:id="@+id/disanLY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_dp10"
                android:layout_marginBottom="@dimen/default_dp10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="驾驶证照片"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="完善驾驶证信息，提升服务等级" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/disanweiwanshanbt"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="未完善" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_33"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/default_dp10">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/authDriverIvUn"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/btn_blue_r5">

                        <ImageView
                            android:id="@+id/iv_3"
                            android:layout_width="@dimen/default_dp100"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp15"
                            android:src="@drawable/jiashizheng1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp10"
                            android:layout_toRightOf="@+id/iv_3"
                            android:text="上传驾驶证"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="@dimen/default_dp30"
                            android:layout_height="@dimen/default_dp30"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/default_dp15"
                            android:background="@drawable/add" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/authDriverIv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/zhengmian"
                        android:visibility="gone" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dp"
                    android:layout_marginTop="@dimen/default_dp10"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/authDriverBackIvUn"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/btn_blue_r5">

                        <ImageView
                            android:id="@+id/iv_5"
                            android:layout_width="@dimen/default_dp100"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp15"
                            android:src="@drawable/jiashizheng2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp10"
                            android:layout_toRightOf="@+id/iv_5"
                            android:text="上传驾驶证副页"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="@dimen/default_dp30"
                            android:layout_height="@dimen/default_dp30"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/default_dp15"
                            android:background="@drawable/add" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/authDriverBackIv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/zhengmian"
                        android:visibility="gone" />

                </FrameLayout>



            </LinearLayout>

            <!--行驶证-->
            <LinearLayout
                android:id="@+id/diwuLY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_dp10"
                android:layout_marginBottom="@dimen/default_dp10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="行驶证照片"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="完善行驶证信息，提升服务等级" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/diwuweiwanshanbt"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="未完善" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_33"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/default_dp10">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/authBookIvUn"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/btn_blue_r5">

                        <ImageView
                            android:id="@+id/iv_4"
                            android:layout_width="@dimen/default_dp100"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp15"
                            android:src="@drawable/xingshizheng1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp10"
                            android:layout_toRightOf="@+id/iv_4"
                            android:text="上传行驶证"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="@dimen/default_dp30"
                            android:layout_height="@dimen/default_dp30"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/default_dp15"
                            android:background="@drawable/add" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/authBookIv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/zhengmian"
                        android:visibility="gone" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_dp10"
                    android:minHeight="120dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/authBookBackIvUn"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/btn_blue_r5">

                        <ImageView
                            android:id="@+id/iv_6"
                            android:layout_width="@dimen/default_dp100"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp15"
                            android:src="@drawable/xingshizheng2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/default_dp10"
                            android:layout_toRightOf="@+id/iv_6"
                            android:text="上传行驶证副页"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="@dimen/default_dp30"
                            android:layout_height="@dimen/default_dp30"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/default_dp15"
                            android:background="@drawable/add" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/authBookBackIv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/zhengmian"
                        android:visibility="gone" />

                </FrameLayout>

            </LinearLayout>


            <!--车辆资料-->
            <LinearLayout
                android:id="@+id/disiLY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/default_dp10"
                android:layout_marginBottom="@dimen/default_dp10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="车辆资料"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_dp10"
                        android:text="完善车辆信息，提升服务等级" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/disiweiwanshanbt"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="未完善" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/disiduiyingLY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_33"
                android:orientation="vertical">


