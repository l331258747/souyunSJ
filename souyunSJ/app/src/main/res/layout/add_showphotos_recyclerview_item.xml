<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/addShowPhotosItemIv"
        android:layout_width="@dimen/add_showphotos_photo_item_size"
        android:layout_height="@dimen/add_showphotos_photo_item_size"
        android:layout_gravity="start|bottom"
        android:src="@drawable/ic_default_avatar"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/addShowPhotosItemDeleteIv"
        android:layout_width="@dimen/add_showphotos_photo_delete_size"
        android:layout_height="@dimen/add_showphotos_photo_delete_size"
        android:layout_gravity="end"
        android:visibility="gone"
        android:src="@drawable/ic_delete_photo"/>

</FrameLayout>