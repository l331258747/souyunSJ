<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/default_dp10"
    >

    <!--<com.ldw.library.view.TitleView-->
        <!--android:id="@+id/baseTitleViews"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?android:attr/actionBarSize"-->
        <!--android:background="@color/colorPrimary"-->
        <!--app:titleText="事实新闻"-->
        <!--app:backImage="@drawable/ic_back"/>-->

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
      <TextView
          android:id="@+id/titlesTv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="@dimen/default_dp20"
          android:gravity="center"
          android:layout_marginStart="@dimen/default_dp10"
          android:layout_marginTop="40dp"
          android:text="标题"
          />
      <TextView
          android:id="@+id/timeTv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="@dimen/default_dp20"
          android:gravity="right"
          android:layout_marginEnd="@dimen/default_dp20"
          android:layout_marginTop="20dp"
          android:text="时间"
          />
      <TextView
          android:id="@+id/contentTv"
          android:layout_width="match_parent"
          android:textSize="@dimen/default_font20"
          android:layout_height="wrap_content"
          android:text="内容"

          />
  </LinearLayout>
</LinearLayout>