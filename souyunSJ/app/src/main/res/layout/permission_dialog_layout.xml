<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/default_dp10"
    android:orientation="vertical">

    <ViewFlipper
        android:id="@+id/permissionVf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/default_font16"
            android:text="为了方便您应用内直接能够拨打电话，请您授权本软件拨打电话的权限。"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/default_font16"
            android:text="应用某些功能需要读取您的通讯录联系人信息，如果您不同意，会导致您没法正常使用。"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/default_font16"
            android:text="应用内地图模块需要获取GPS等定位权限，如果您不同意，将导致这些重要功能没法正常使用。"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/default_font16"
            android:text="应用内有些模块需要访问您的摄像头，为了您能正常的操作这些模块，请您授权相机权限。"/>

    </ViewFlipper>

    <LinearLayout style="@style/MaterialDialogButtonLayout">

        <Button
            android:id="@+id/permissionDisagreeBtn"
            style="@style/MaterialDialogButton"
            android:textColor="@color/gray"
            android:text="不同意" />

        <Button
            android:id="@+id/permissionAgreeBtn"
            style="@style/MaterialDialogButton"
            android:layout_marginStart="@dimen/default_dp8"
            android:text="同意" />
    </LinearLayout>

</LinearLayout>